<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <color name="myCustomYellowColor">#FFFF</color>
  <color name="colorPrim">#FFA500</color>
  <color name="colorPrimD">#000</color>
  <color name="colorAcc">#FF8C00</color>
  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->
    <item name="android:drawableTint">@color/myCustomYellowColor</item>
    <item name="colorPrimary">@color/colorPrim</item>
    <item name="colorPrimaryDark">@color/colorPrimD</item>
    <item name="colorAccent">@color/colorAcc</item>
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <!--<item name="colorPrimary">#2196F3</item>-->
    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
  </style>
  <style name="MyTextAppearance.Material.Button" parent="@android:style/TextAppearance.Material.Button">
    <item name="textAllCaps">false</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FFA500</item>
    <item name="colorPrimary">#000000</item>
  </style>
  <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FFA500</item>
    <item name="android:timePickerStyle">@style/timePickerDialogStyle</item>
  </style>
  <style name="timePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
    <item name="colorAccent">#FFA500</item>
    <item name="android:timePickerMode">clock</item>
    <item name="android:headerBackground">#FFA500</item>
  </style>

</resources>